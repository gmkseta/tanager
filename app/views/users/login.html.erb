<h1>로그인</h1>
<%= form_with model: User.new, url: "/login", method: "post" do |f| %>
  <div class="form-group">
    <%= f.label "아이디" %>
    <%= f.text_field :login, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "비밀번호" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  
  <div>
    <%= f.submit "로그인", class: "btn btn-outline-primary btn-block" %>
  </div>
<% end %>